{
	"name": "lokit",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"author": "king-mini",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build && react-snap",
		"lint": "eslint .",
		"preview": "vite preview",
		"deploy": "npm run build && wrangler pages deploy dist --project-name=file-convert",
		"deploy:preview": "npm run build && wrangler pages deploy dist --project-name=file-convert --branch=preview"
	},
	"reactSnap": {
		"source": "dist",
		"minifyHtml": {
			"collapseWhitespace": false,
			"removeComments": false
		},
		"puppeteerArgs": [
			"--no-sandbox",
			"--disable-setuid-sandbox"
		],
		"skipThirdPartyRequests": true,
		"cacheAjaxRequests": false,
		"include": [
			"/",
			"/pdf",
			"/pdf/to-jpg",
			"/pdf/to-png",
			"/pdf/to-text",
			"/pdf/merge",
			"/pdf/split",
			"/pdf/rotate",
			"/pdf/compress",
			"/pdf/image-to-pdf",
			"/image",
			"/image/blur-background",
			"/image/bg-remove",
			"/image/resize",
			"/image/compress",
			"/image/format",
			"/image/crop"
		]
	},
	"dependencies": {
		"file-saver": "^2.0.5",
		"i18next": "^23.14.0",
		"jspdf": "^3.0.4",
		"jszip": "^3.10.1",
		"pdf-lib": "^1.17.1",
		"pdfjs-dist": "^5.4.394",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-i18next": "^15.4.0",
		"react-router-dom": "^7.9.6"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.15.2",
		"@eslint/js": "^9.33.0",
		"@types/file-saver": "^2.0.7",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react-swc": "^4.0.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"react-snap": "^1.23.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"wrangler": "^4.51.0"
	}
}
